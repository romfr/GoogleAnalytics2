<?xml version="1.0"?>
<config>
    <modules>
        <Rom_GoogleAnalytics2>
            <version>0.7.0</version>
        </Rom_GoogleAnalytics2>
    </modules>

    <global>
        <models>
            <romgoogleanalytics2><class>Rom_GoogleAnalytics2_Model</class></romgoogleanalytics2>
        </models>
        <blocks>
            <romgoogleanalytics2><class>Rom_GoogleAnalytics2_Block</class></romgoogleanalytics2>
        </blocks>
        <helpers>
            <romgoogleanalytics2>
                <class>Rom_GoogleAnalytics2_Helper</class>
            </romgoogleanalytics2>
        </helpers>
    </global>

    <frontend>
        <translate>
            <modules>
                <Rom_GoogleAnalytics2>
                    <files>
                        <default>Mage_GoogleAnalytics.csv</default>
                    </files>
                </Rom_GoogleAnalytics2>
            </modules>
        </translate>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <romgoogleanalytics2_order_success>
                        <class>romgoogleanalytics2/observer</class>
                        <method>setGoogleAnalyticsOnOrderSuccessPageView</method>
                    </romgoogleanalytics2_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <romgoogleanalytics2_order_success>
                        <class>romgoogleanalytics2/observer</class>
                        <method>setGoogleAnalyticsOnOrderSuccessPageView</method>
                    </romgoogleanalytics2_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
            <googlecheckout_block_link_html_before>
                <observers>
                    <romgoogleanalytics2_googlecheckout_integration>
                        <class>romgoogleanalytics2/observer</class>
                        <method>injectAnalyticsInGoogleCheckoutLink</method>
                    </romgoogleanalytics2_googlecheckout_integration>
                </observers>
            </googlecheckout_block_link_html_before>
        </events>
        <layout>
            <updates>
                <romgoogleanalytics2>
                    <file>romgoogleanalytics2.xml</file>
                </romgoogleanalytics2>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Rom_GoogleAnalytics2>
                    <files>
                        <default>Mage_GoogleAnalytics.csv</default>
                    </files>
                </Rom_GoogleAnalytics2>
            </modules>
        </translate>
    </adminhtml>
</config>
